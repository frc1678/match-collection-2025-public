<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--When the button is focused.-->
    <item android:state_focused="true" android:state_pressed="false" android:drawable="@drawable/btn_white_pressed" />

    <!--When the button is focused and pressed.-->
    <item android:state_focused="true" android:state_pressed="true" android:drawable="@drawable/btn_white_pressed" />

    <!--When the button is pressed.-->
    <item android:state_focused="false" android:state_pressed="true" android:drawable="@drawable/btn_white_pressed" />

    <!--Default button.-->
    <item android:drawable="@drawable/btn_white" />

</selector>