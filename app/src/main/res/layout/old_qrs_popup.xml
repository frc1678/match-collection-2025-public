<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/larger_than_very_large">

    <ImageView
        android:id="@+id/iv_old_qr_exit"
        android:layout_width="@dimen/medium"
        android:layout_height="@dimen/medium"
        android:src="@drawable/close_button"
        android:layout_gravity="right" />

    <ListView
        android:id="@+id/lv_old_qrs"
        android:layout_width="@dimen/very_large"
        android:layout_height="wrap_content"
        android:background="@color/white" />

</LinearLayout>