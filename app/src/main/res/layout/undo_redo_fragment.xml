<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_undo"
        style="@style/btn_action_hor"
        android:background="@drawable/btn_undo_selector"
        android:padding="@dimen/very_very_small"
        android:layout_marginRight="@dimen/very_very_small"
        android:text="@string/btn_undo" />

    <Button
        android:id="@+id/btn_redo"
        style="@style/btn_action_hor"
        android:background="@drawable/btn_redo_selector"
        android:padding="@dimen/very_very_small"
        android:layout_marginLeft="@dimen/very_very_small"
        android:text="@string/btn_redo" />

</LinearLayout>