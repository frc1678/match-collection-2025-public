<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.frc1678.match_collection">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@null"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.frc1678.match_collection.ModeCollectionSelectActivity"
            android:screenOrientation="landscape"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.frc1678.match_collection.QRGenerateActivity"
            android:screenOrientation="landscape"
            android:turnScreenOn="true" />
        <activity
            android:name="com.frc1678.match_collection.objective.CollectionObjectiveActivity"
            android:screenOrientation="landscape"
            android:turnScreenOn="true" />
        <activity
            android:name="com.frc1678.match_collection.MatchInformationInputActivity"
            android:screenOrientation="landscape"
            android:turnScreenOn="true" />
        <activity
            android:name="com.frc1678.match_collection.CollectionSubjectiveActivity"
            android:screenOrientation="landscape"
            android:turnScreenOn="true" />
        <activity
            android:name="com.frc1678.match_collection.MatchInformationEditActivity"
            android:screenOrientation="landscape"
            android:turnScreenOn="true" />
        <activity
            android:name="com.frc1678.match_collection.CollectionActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.frc1678.match_collection.MatchInformationActivity"
            android:screenOrientation="landscape"
            android:turnScreenOn="true" />
        <activity
            android:name="com.frc1678.match_collection.objective.StartingPositionObjectiveActivity"
            android:screenOrientation="landscape"
            android:turnScreenOn="true" />
        <activity
            android:name="com.frc1678.match_collection.PlayoffActivity"
            android:screenOrientation="landscape"
            android:turnScreenOn="true" />
    </application>

</manifest>
